<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.grapwr.GameActivity$PlaceholderFragment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textViewGame1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blank"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <CheckBox
            android:id="@+id/checkBoxGame1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewGame1"
            android:text="@string/blank" />

        <CheckBox
            android:id="@+id/checkBoxGame2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBoxGame1"
            android:text="@string/blank" />

        <CheckBox
            android:id="@+id/checkBoxGame3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBoxGame2"
            android:text="@string/blank" />

        <CheckBox
            android:id="@+id/checkBoxGame4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBoxGame3"
            android:text="@string/blank" />

        <CheckBox
            android:id="@+id/checkBoxGame5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBoxGame4"
            android:text="@string/blank" />

        <CheckBox
            android:id="@+id/checkBoxGame6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBoxGame5"
            android:text="@string/blank" />

        <CheckBox
            android:id="@+id/checkBoxGame7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBoxGame6"
            android:text="@string/blank" />

        <CheckBox
            android:id="@+id/checkBoxGame8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBoxGame7"
            android:text="@string/blank" />

        <Button
            android:id="@+id/buttonGame1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/checkBoxGame8"
            android:text="@string/blank" />

    </RelativeLayout>

</ScrollView>
